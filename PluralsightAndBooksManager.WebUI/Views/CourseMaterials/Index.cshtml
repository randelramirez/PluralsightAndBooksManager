@model IEnumerable<PluralsightAndBooksManager.Core.CourseMaterial>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3 style="background-color:#FFC41F; color:#0031E8;">@ViewBag.InCollectionTotal of @ViewBag.TotalCourseMaterials are in collection: <span>@(Math.Round(((double)ViewBag.InCollectionTotal/ ViewBag.TotalCourseMaterials) * 100,2))% </span></h3>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.IsInCollection)
    {
        <tr style="background-color:green; color:white;">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

    else
    {
        <tr style="background-color:#E9F7FF; color:#B26400">
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
    }
}

</table>
